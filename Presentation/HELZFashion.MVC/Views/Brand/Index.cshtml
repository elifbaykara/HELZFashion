@using Microsoft.AspNetCore.Identity;
@using HELZFashion.Domain.Entities;
@model List<Brand>

<div class="container mt-3">
    <h2>Brands</h2>
    <table class="table table-dark table-hover">
        <thead>
            <tr>
                <th>Title</th>
                <th>Desc.</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var brand in Model)
            {

                <tr>
                    <td>@brand.Name</td>
                    <td>@brand.Description</td>
                </tr>
            }
        </tbody>
    </table>
</div>